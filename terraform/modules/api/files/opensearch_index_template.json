{
  "index_patterns": ["nostr_events*"],
  "priority": 100,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.refresh_interval": "1s"
    },
    "mappings": {
      "properties": {
        "id": {
          "type": "keyword",
          "doc_values": true
        },
        "pubkey": {
          "type": "keyword",
          "doc_values": true
        },
        "kind": {
          "type": "integer"
        },
        "created_at": {
          "type": "long"
        },
        "tag_e": {
          "type": "keyword"
        },
        "tag_p": {
          "type": "keyword"
        },
        "tag_d": {
          "type": "keyword"
        },
        "tag_a": {
          "type": "keyword"
        },
        "tag_t": {
          "type": "keyword"
        },
        "event_json": {
          "type": "text",
          "index": false
        }
      }
    }
  },
  "_meta": {
    "description": "Nostrイベント検索用インデックステンプレート",
    "version": "1.0.0",
    "requirements": "2.1, 2.2, 2.3, 2.4, 2.5, 2.6, 2.7, 2.8, 2.9"
  }
}
